<Window x:Class="FIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIO"
        mc:Ignorable="d"
        Title="FIO" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="firstNameTextBox" FontSize="40" Margin="35"/>
            <TextBox Grid.Column="1" x:Name="middleNameTextBox" FontSize="40" Margin="35"/>
            <TextBox Grid.Column="2" x:Name="lastNameTextBox" FontSize="40" Margin="35"/>
        </Grid>
        <ListView Grid.Row="1" x:Name="listView" FontSize="30"/>
        <Button Grid.Row="2" Content="Создать" FontSize="40" Margin="35" Background="LightSkyBlue" Click="Button_Click"/>
    </Grid>
</Window>
